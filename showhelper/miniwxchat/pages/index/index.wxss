.container {
	display: flex;
	flex-direction: column;
	height: 100%;
}

.header {
	padding: 20rpx;
	text-align: center;
	background-color: #1AAD19;
}

.title {
	font-size: 36rpx;
	font-weight: bold;
	color: #ffffff;
}

.content {
	flex: 1;
	padding: 40rpx;
}

.introduction {
	margin-bottom: 40rpx;
}

.intro-text {
	font-size: 28rpx;
	line-height: 1.5;
	color: #333333;
}

.guide {
	margin-bottom: 40rpx;
}

.guide-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 20rpx;
}

.guide-steps {
	margin-bottom: 20rpx;
}

.step {
	font-size: 28rpx;
	line-height: 1.5;
	color: #666666;
	margin-bottom: 10rpx;
}

.upload-btn {
	display: block;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	background-color: #1AAD19;
	color: #ffffff;
	font-size: 30rpx;
	text-align: center;
	border-radius: 10rpx;
}

.footer {
	padding: 20rpx;
	text-align: center;
	background-color: #f8f8f8;
}

.copyright {
	font-size: 24rpx;
	color: #999999;
}